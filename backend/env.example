# Copia este archivo a .env y rellena con tus valores reales

# Base de Datos PostgreSQL
DATABASE_URL=postgresql://user:password@host:port/database

# Configuraci√≥n del Servidor
NODE_ENV=development
PORT=3000

# Seguridad
JWT_SECRET=your_super_secret_jwt_key_here_change_this

# (Opcional) Superadmin por ENV (recomendado solo para emergencias)
# Si NO se define, esta v√≠a queda deshabilitada.
SUPER_ADMIN_USERNAME=
SUPER_ADMIN_PASSWORD=
SUPER_ADMIN_NAME=Super Administrador

# CORS (URLs permitidas separadas por comas)
CORS_ORIGINS=http://localhost:5173,http://localhost:3001,https://yourdomain.netlify.app

# Cloudinary (opcional - para subida de im√°genes)
